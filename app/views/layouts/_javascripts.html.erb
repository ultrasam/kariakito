<%= javascript_include_tag 'jquery-1.5.2' %>
<%= javascript_include_tag 'jquery.tabSlideOut.v1.3' %>
<script type="text/javascript">                                         
  $(document).ready(function() {
    $("#link_acerca").focusout(function(){
      $("#acerca").fadeOut('slow');
    });
    $("#logo").click(function(event){
      event.preventDefault();
      $("#menu").fadeIn('slow');
    });
    $("#link_acerca").toggle(function(){
      $("#contacto").fadeOut('fast', function(){
        $("#acerca").fadeIn('slow');
      });
    },function(){
      $("#acerca").fadeOut('slow');
    });
    $("#link_contacto").toggle(function(){
      $("#acerca").fadeOut('fast', function(){
        $("#contacto").fadeIn('slow');
      });
    },function(){
      $("#contacto").fadeOut('slow');
    });
    /* Facebook Logo */
    $("#facebook_on").hide();
    $("#facebook_off").hover(function(){
      $("#facebook_off").hide();
      $("#facebook_on").show();
    },function(){
    });
    $("#facebook_on").hover(function(){
    },function(){
      $("#facebook_on").hide();
      $("#facebook_off").show();
    });
    /* Twitter Logo */
    $("#twitter_on").hide();
    $("#twitter_off").hover(function(){
      $("#twitter_off").hide();
      $("#twitter_on").show();
    },function(){
    });
    $("#twitter_on").hover(function(){
    },function(){
      $("#twitter_on").hide();
      $("#twitter_off").show();
    });
  });

  $(function(){
      $('.slide-out-div').tabSlideOut({
          tabHandle: '.handle',                               //class of the element that will become your tab
          pathToTabImage: '../images/feisbuc_cursor_on.png',  //path to the image for the tab //Optionally can be set using css
          imageHeight: '19px',                               //height of tab image           //Optionally can be set using css
          imageWidth: '19px',                                 //width of tab image            //Optionally can be set using css
          tabLocation: 'left',                                 //side of screen where tab lives, top, right, bottom, or left
          speed: 300,                                         //speed of animation
          action: 'click',                                    //options: 'click' or 'hover', action to trigger animation
          topPos: '200px',                                    //position from the top/ use if tabLocation is left or right
          leftPos: '400px',                                    //position from left/ use if tabLocation is bottom or top
          fixedPosition: true                                //options: true makes it stick(fixed position) on scroll
      });

  });
</script>
